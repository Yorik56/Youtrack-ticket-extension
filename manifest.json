{
  "manifest_version": 2,
  "name": "Créer Ticket YouTrack",
  "version": "1.0",
  "description": "Ajoute un bouton pour créer un ticket dans YouTrack depuis un mail.",
  "applications": {
    "gecko": {
      "id": "creer-ticket-youtrack@example.com",
      "strict_min_version": "91.0"
    }
  },
  "permissions": [
    "accountsRead",
    "messagesRead",
    "messagesMove",
    "tabs",
    "activeTab",
    "compose",
    "storage",
    "accountsRead",
    "messagesRead"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon-16.png"
  },
  "message_display_action": {
    "default_title": "Créer un ticket YouTrack",
    "default_icon": {
      "16": "icon-16.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "options.html"
  ]
}
